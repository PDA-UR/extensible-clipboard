{
  "name": "Enhanced Clipboard",
  "version": "1.0",
  "description": "Interacts with the server to clipboard data",
  "permissions": ["contextMenus", "storage",
                  "http://localhost/"  
                 ],
  "background": {
      "scripts": ["app.js", 
                  "clipboard_api.js",
                  "requestBuilder.js",
                  "libs/jquery-3.3.1.min.js"],
      "persistent": false
  },
  "browser_action":{
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo16.png",
      "32": "images/logo32.png",
      "48": "images/logo48.png",
      "128": "images/logo128.png"
    }
  },
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "manifest_version": 2
}
